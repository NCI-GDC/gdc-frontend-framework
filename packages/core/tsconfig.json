{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/*.spec.ts*"],
  "compilerOptions": {
    "outDir": "dist/dts",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strict": true,
    "target": "esnext",
    "lib": ["dom", "esnext"]
  }
}
